                <pb facs="nei.j4a.13.12"/>
                
                <note type="curatorial">102 House Collection</note>
                <fw type="curatorial">12</fw>
                
                <fw type="letterhead">
                    <hi rend="caps">
                        GEORGE P. BRETT, PRESIDENT      A.H. NELSON, VICE PRESIDENT     L.J. LUCAS, SECRETARY       GEORGE P.BRETT, JR., TREASURER
                        
