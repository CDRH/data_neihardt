            <div1 type="letter">
                
                <pb facs="nei.j4a.14.12"/>
                
                <note type="curatorial">Missouri Collection</note>
                <fw type="curatorial">12</fw>
                
                <fw type="letterhead">
                    <hi rend="caps">
                        CHRISTODORA HOUSE
                            <lb/>
                        147 AVENUE B., NEW YORK, N.Y.
                            <lb/>
                        TELEPHONE ALGONQUIN 8400
                            <lb/>
                        
                        OFFICERS OF BOARD OF MANAGERS
                            <lb/>
                        
                        MRS. ARTHUR CURTISS JAMES, PRESIDENT
                            <lb/>
                        MRS. FRANK N. DOUBLEDAY, VICE-PRESIDENT
                            <lb/>
                        MRS. SETH M. MILLIKEN, SECRETARY
                            <lb/>
                        JOHN SHERMAN HOYT, TREASURER
                            <lb/>
                        MISS C. I. MACCOLL, HEAD WORKER
                            <lb/>
                        WILLIAM DE R. MANICE, COUNSEL
                            <lb/>
                        
