                <pb facs="nei.j4a.26a.16-17_0002"/>
                
                <ab type="return">
                    Sanford <hi rend="caps">D.</hi> Gray
                    555 Gayley
                    Los Angeles 24
                    California
                </ab>
                
                <fw type="curatorial">17</fw>
                
